block meta
	link(rel='stylesheet', href='/css/login.css')
block content
	.w-1200
		#msg.msg
		form#form.form
			.label
				span 用户名
				input(type='text',name='username',max-length='20')
			.label
				span 密码
				input(type='password',name='pwd',min-length='6')
			.label
				input#submit(type='button',value='提交')
				input(type='reset',value='重置')
	script(src="/js/user-login.js")